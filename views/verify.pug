extends _form

include mixins/button

block inputs
    div.center
        input(type="text" id="digit-1" data-next="digit-2" maxlength="1" required)
        input(type="text" id="digit-2" data-next="digit-3" maxlength="1" data-previous="digit-1" required)
        input(type="text" id="digit-3" data-next="digit-4" maxlength="1" data-previous="digit-2" required)
        input(type="text" id="digit-4" data-next="digit-5" maxlength="1" data-previous="digit-3" required)
        input(type="text"  id="digit-5" data-next="digit-6" maxlength="1" data-previous="digit-4" required)
        input(type="text" id="digit-6" maxlength="1" data-previous="digit-5" required )

block button
    div.center
        +button("submit","Verify")

block description
    p(class="descption-text txt-centered small-txt") You can send request again, if you have not received OTP sent on your registered device.
        a(href="#" class="txt-primary") Resend OTP
    h2(class="descption-text txt-centered" id='timer') 18:19
        